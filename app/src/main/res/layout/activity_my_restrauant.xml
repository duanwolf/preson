<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"/>
    <LinearLayout
        android:id="@+id/info"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.restrauant.fragment.CircleImageView
            android:src="@drawable/user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="王某某"
            android:textSize="@dimen/simple_size"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/packet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/column_height"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="我的钱包"
                android:textColor="#000"
                android:textSize="@dimen/simple_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/column_height"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_my_1"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="余额$0.00"
                        android:textColor="#000"
                        android:textSize="@dimen/simple_size" />

                    <TextView
                        android:id="@+id/bank"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/column_height"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_my_2"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="银行卡"
                        android:textColor="#000"
                        android:textSize="@dimen/simple_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/details"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/column_height"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_my_3"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="明细"
                        android:textColor="#000"
                        android:textSize="@dimen/simple_size" />

                    <TextView
                        android:id="@+id/get_money"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/column_height"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_my_4"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="提现"
                        android:textColor="#000"
                        android:textSize="@dimen/simple_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/restrua"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="我的店铺"
            android:textColor="#000"
            android:textSize="@dimen/simple_size" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/my_menu"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/column_height"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableLeft="@mipmap/ic_my_5"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="电子菜单"
                    android:textColor="#000"
                    android:textSize="@dimen/simple_size" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/column_height"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableLeft="@mipmap/ic_my_6"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="我的评分"
                    android:textColor="#000"
                    android:textSize="@dimen/simple_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="@dimen/column_height"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:drawableRight="@mipmap/next_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="更多"
        android:textColor="#000"
        android:textSize="@dimen/simple_size" />

</LinearLayout>

